<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp">

    <ImageView
        android:id="@+id/imageviewSong"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="3dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/textviewSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imageviewSong"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:text="Tên bài hát"/>

    <TextView
        android:id="@+id/textviewSinger"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewSongName"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/imageviewSong"
        android:maxLines="2"
        android:text="Tên ca sĩ"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:singleLine="true"
        android:ellipsize="end"/>

    <ImageView
        android:layout_marginRight="10dp"
        android:src="@drawable/iconlove"
        android:id="@+id/imageLove"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="20dp"
        android:layout_height="20dp" />

</RelativeLayout>